<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/marker3"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uco.tlawyer.whereyouat.RegisterUserActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="12">

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginTop="20sp"
            android:layout_row="0"
            android:text="@string/email"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/EditTextEmail"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_marginTop="10sp"
            android:layout_row="0"
            android:hint="@string/emailHint"
            android:inputType="textEmailAddress"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginTop="10sp"
            android:layout_row="1"
            android:text="@string/username"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/EditPhoneNumber"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_marginTop="10sp"
            android:layout_row="1"
            android:hint="@string/usernameHint"
            android:inputType="phone"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginTop="10sp"
            android:layout_row="2"
            android:text="Username:"
            android:textColor="#ffffff"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/EditTextUsername2"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_marginTop="10sp"
            android:layout_row="2"
            android:hint="No Special Chars"
            android:inputType="text"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginTop="10sp"
            android:layout_row="3"
            android:text="@string/password"
            android:textColor="#ffffff"

            android:textSize="25sp" />


        <EditText
            android:id="@+id/EditTextPassword2"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_marginTop="10sp"
            android:layout_row="3"
            android:hint="@string/passMin"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginTop="10sp"
            android:layout_row="4"
            android:layout_rowSpan="2"
            android:paddingRight="20sp"
            android:text="@string/confirm"
            android:textColor="#f90000"

            android:textSize="25sp" />


        <EditText
            android:id="@+id/EditTextConfirmPassword"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="10sp"
            android:layout_row="4"
            android:hint="@string/retype"
            android:inputType="textPassword"
            android:textColor="#ffffff"

            android:textColorHint="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:layout_column="0"
            android:layout_row="5"
            android:layout_rowSpan="2"
            android:text="Validate Account"
            android:textColor="#f90000"
            android:textSize="25sp"

            />

        <RadioGroup
            android:id="@+id/radioButtonValidation"
            android:layout_column="1"
            android:layout_row="5"
            android:orientation="vertical"

            >

            <RadioButton
                android:id="@+id/radioButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/radioButtonEamil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#ffffff"
                android:textSize="25sp" />


        </RadioGroup>

        <Button
            android:id="@+id/registerButtonRegister"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:layout_row="7"
            android:background="#65aef1"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="25sp"
            />

        <TextView
            android:layout_column="0"
            android:layout_row="8"
            android:text="Code Recevied"
            android:textColor="#ffffff"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/editTextCodeEntered"
            android:layout_column="1"
            android:layout_row="8"
            android:hint="Enter received Code"
            android:textColorHint="#000000"
            android:textSize="23sp"
            android:inputType="number"
            />
        <Button
            android:id="@+id/registerButtonConfirmCode"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:layout_row="10"
            android:background="#65aef1"
            android:text="Confirm Code"
            android:textColor="#ffffff"
            android:textSize="25sp"

            />

    </GridLayout>


</LinearLayout>



