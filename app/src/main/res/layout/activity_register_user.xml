<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/marker3"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uco.tlawyer.whereyouat.RegisterUserActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="10">

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginTop="20sp"
            android:layout_row="0"
            android:text="@string/email"
            android:textSize="25sp"
            android:background="#ffffff"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/EditTextEmail"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_marginTop="20sp"
            android:layout_row="0"
            android:hint="@string/emailHint"
            android:inputType="textEmailAddress"
            android:textSize="25sp"
            android:background="#ffffff"
            android:textColor="#000000"/>

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginTop="20sp"
            android:layout_row="1"
            android:text="@string/username"
            android:textSize="25sp"
            android:background="#ffffff"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/EditTextUsername2"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_marginTop="20sp"
            android:hint="@string/usernameHint"
            android:layout_row="1"
            android:textSize="25sp"
            android:background="#ffffff"
            android:textColor="#000000"/>


        <TextView
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginTop="20sp"
            android:layout_row="2"
            android:text="@string/password"
            android:textSize="25sp"
            android:background="#ffffff"
            android:textColor="#000000"/>


        <EditText
            android:id="@+id/EditTextPassword2"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_marginTop="20sp"
            android:layout_row="2"
            android:hint="@string/passMin"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:background="#ffffff"
            android:textColor="#000000"/>

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginTop="20sp"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:paddingRight="20sp"
            android:text="@string/confirm"
            android:textSize="25sp"
            android:background="#ffffff"
            android:textColor="#000000"/>


        <EditText
            android:id="@+id/EditTextConfirmPassword"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_marginTop="20sp"
            android:layout_row="3"
            android:hint="@string/retype"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:background="#ffffff"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/registerButtonRegister"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:layout_row="7"
            android:background="#65aef1"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </GridLayout>


</LinearLayout>



